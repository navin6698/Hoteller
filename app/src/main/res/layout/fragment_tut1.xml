<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.teamnamenotfoundexception.hoteller.TutorialFragments.Tutorial1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear"
        android:paddingRight="@dimen/dopeDimen"
        android:paddingLeft="@dimen/dopeDimen"
        android:orientation="vertical">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/log"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/hoteller_icon"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/titl"
        android:layout_gravity="center"
        android:src="@drawable/hotellerlogo"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Hoteller, an App designed to automate the billing process of a hotel/restaurant.
Swipe left to learn more."
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</FrameLayout>
