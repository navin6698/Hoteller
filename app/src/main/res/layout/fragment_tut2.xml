<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.teamnamenotfoundexception.hoteller.TutorialFragments.Tutorial2Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/touch_item2"
        android:layout_margin="6dp"
        android:id="@+id/img"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="Tap on the list item to select the desired quantity of the dish."
            android:textAlignment="center"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/touch_dialog2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:textColor="@color/white"

            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:text="And place the order."
            android:textAlignment="center"/>

    </LinearLayout>

</FrameLayout>
